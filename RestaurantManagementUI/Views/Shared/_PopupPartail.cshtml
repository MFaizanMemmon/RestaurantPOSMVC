<div class="modal fade" id="mainModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white cursor-move">
                <h5 class="modal-title" id="mainModalTitle">Modal Title</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="mainModalBody">
                <div class="text-center p-4" id="modalLoader" style="display:none;">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2 text-primary">Loading...</p>
                </div>
            </div>
          
        </div>
    </div>
</div>

<div class="modal fade" id="dynamicConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-sm">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="dynamicConfirmTitle">Confirm Action</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="dynamicConfirmMessage">
                Are you sure you want to perform this action?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-bs-dismiss="modal" id="dynamicConfirmCancel">Cancel</button>
                <button type="button" class="btn btn-primary" id="dynamicConfirmYes">Yes</button>
            </div>
        </div>
    </div>
</div>
