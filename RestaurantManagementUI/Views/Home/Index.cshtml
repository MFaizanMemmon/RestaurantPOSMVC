@{
    ViewBag.Title = "Restaurant Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Your main layout
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">Restaurant Dashboard</h2>

    <!-- Quick Stats Cards -->
    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text display-5">@ViewBag.TotalOrders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Revenue Today</h5>
                    <p class="card-text display-5">$@ViewBag.RevenueToday</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Active Tables</h5>
                    <p class="card-text display-5">@ViewBag.ActiveTables</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Pending Orders</h5>
                    <p class="card-text display-5">@ViewBag.PendingOrders</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Chart -->
    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">Orders in Last 7 Days</div>
                <div class="card-body">
                    <canvas id="ordersChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Revenue Chart -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">Revenue in Last 7 Days</div>
                <div class="card-body">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders Table -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">Recent Orders</div>
                <div class="card-body table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Table No</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Order Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in ViewBag.RecentOrders)
                            {
                                <tr>
                                    <td>@order.OrderID</td>
                                    <td>@order.TableNo</td>
                                    <td>@order.Items</td>
                                    <td>$@order.Total</td>
                                    <td>@order.Status</td>
                                    <td>@order.OrderTime.ToString("dd-MMM-yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Orders Chart
        var ctxOrders = document.getElementById('ordersChart').getContext('2d');
        var ordersChart = new Chart(ctxOrders, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.OrdersLast7Days.Labels)),
                datasets: [{
                    label: 'Orders',
                    data: @Html.Raw(Json.Serialize(ViewBag.OrdersLast7Days.Data)),
                    borderColor: 'rgba(54, 162, 235, 1)',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    fill: true
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Revenue Chart
        var ctxRevenue = document.getElementById('revenueChart').getContext('2d');
        var revenueChart = new Chart(ctxRevenue, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.RevenueLast7Days.Labels)),
                datasets: [{
                    label: 'Revenue ($)',
                    data: @Html.Raw(Json.Serialize(ViewBag.RevenueLast7Days.Data)),
                    backgroundColor: 'rgba(255, 206, 86, 0.6)',
                    borderColor: 'rgba(255, 206, 86, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
}
