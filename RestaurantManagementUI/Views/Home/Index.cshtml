@{
    ViewData["Title"] = "PulsePOS | Customer Portal";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #1e1f29, #3a3b5a);
            color: #fff;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-attachment: fixed;
        }

        .portal-container {
            width: 90%;
            max-width: 1200px;
            padding: 40px;
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(12px);
            border-radius: 25px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.3);
        }

        .portal-header h1 {
            font-weight: 700;
            color: #00d4ff;
            letter-spacing: 1px;
        }

        .portal-header p {
            color: #cfcfcf;
        }

        .card-portal {
            background: rgba(255, 255, 255, 0.12);
            border: none;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

        .card-portal:hover {
            transform: translateY(-8px);
            background: rgba(255, 255, 255, 0.2);
        }

        .card-portal i {
            font-size: 2.5rem;
            color: #00d4ff;
        }

        .card-portal h5 {
            margin-top: 15px;
            font-weight: 600;
        }

        .btn-gradient {
            background: linear-gradient(45deg, #00d4ff, #007bff);
            border: none;
            color: #fff;
            border-radius: 50px;
            padding: 10px 30px;
            transition: all 0.3s ease;
        }

        .btn-gradient:hover {
            opacity: 0.85;
        }

        footer {
            margin-top: 40px;
            text-align: center;
            color: #bbb;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <div class="portal-container text-center">
        <div class="portal-header mb-5">
            <h1><i class="bi bi-lightning-charge"></i> PulsePOS Customer Portal</h1>
            <p>Manage your restaurant performance, sales, and customers with a single click.</p>
        </div>

        <div class="row g-4 justify-content-center">
            <div class="col-md-3 col-sm-6">
                <div class="card card-portal p-4">
                    <i class="bi bi-bar-chart-line"></i>
                    <h5>Dashboard</h5>
                    <p>View your real-time reports and sales summary.</p>
                    <a href="/Customer/Dashboard" class="btn btn-gradient btn-sm mt-2">Open</a>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="card card-portal p-4">
                    <i class="bi bi-receipt"></i>
                    <h5>Orders</h5>
                    <p>Track live and completed restaurant orders.</p>
                    <a href="/Customer/Orders" class="btn btn-gradient btn-sm mt-2">Manage</a>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="card card-portal p-4">
                    <i class="bi bi-file-earmark-text"></i>
                    <h5>Invoices</h5>
                    <p>Access your billing history and download receipts.</p>
                    <a href="/Customer/Invoices" class="btn btn-gradient btn-sm mt-2">View</a>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="card card-portal p-4">
                    <i class="bi bi-person-circle"></i>
                    <h5>Profile</h5>
                    <p>Update your restaurant info or subscription details.</p>
                    <a href="/Customer/Profile" class="btn btn-gradient btn-sm mt-2">Edit</a>
                </div>
            </div>
        </div>

        <div class="mt-5">
            <a href="/Account/Logout" class="btn btn-outline-light px-4">Logout</a>
        </div>

        <footer class="mt-4">
            © @DateTime.Now.Year PulsePOS — Powered by YourCompanyName
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
