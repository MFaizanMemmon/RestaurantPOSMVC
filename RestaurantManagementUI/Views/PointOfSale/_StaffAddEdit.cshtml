@model StaffViewModel

<form id="StaffForm" asp-action="StaffAddEdit" asp-controller="PointOfSale">
    @if (Model.StaffID != 0)
    {
        <input type="hidden" asp-for="StaffID" />
    }

    <div class="mb-3">
        <label asp-for="StaffName" class="form-label">Name</label>
        <input asp-for="StaffName" class="form-control" autocomplete="off" />
        <span asp-validation-for="StaffName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RoleID" class="form-label">Role</label>
        <select asp-for="RoleID" class="form-select" asp-items="Model.Roles"></select>
        <span asp-validation-for="RoleID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StaffPhone" class="form-label">Phone</label>
        <input asp-for="StaffPhone" class="form-control" autocomplete="off" />
        <span asp-validation-for="StaffPhone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserName" class="form-label">User Name</label>
        <input asp-for="UserName" class="form-control" autocomplete="off" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserPassword" class="form-label">Password</label>
        <input asp-for="UserPassword" class="form-control" autocomplete="off" />
        <span asp-validation-for="UserPassword" class="text-danger"></span>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary" form="StaffForm">Save Staff</button>
</div>
