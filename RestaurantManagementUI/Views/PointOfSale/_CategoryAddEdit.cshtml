@model tbl_Category
@{
    Layout = null; // optional if you're loading this in a modal
}


<form id="categoryForm" asp-action="CategoryCreate" asp-controller="PointOfSale" method="post">
    @if (Model != null && Model.CategoryID != 0)
    {
        <input type="hidden" asp-for="CategoryID" />
    }

    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label">Category Name</label>
        <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" required />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
</form>


<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary" form="categoryForm">Save Category</button>
</div>
