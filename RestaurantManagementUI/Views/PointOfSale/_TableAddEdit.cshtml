@model tbl_Table

<form id="tableForm" asp-controller="PointOfSale" asp-action="TableAddEdit" method="post">
    @if (Model.Tid != 0)
    {
        <input type="hidden" asp-for="Tid" />
    }

    <div class="form-group mb-3">
        <label asp-for="TName" class="form-label">Table Name</label>
        <input asp-for="TName" class="form-control" autocomplete="off" required />
        <span asp-validation-for="TName" class="text-danger"></span>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary" form="tableForm" id="btnSaveTable">Save Table</button>
</div>

<script>
    
    $("#tableForm").on("submit", function (e) {
        e.preventDefault();

        var formData = $(this).serialize();

        $.ajax({
            url: $(this).attr("action"),
            type: "POST",
            data: formData,

            beforeSend: function () {
                $("#btnSaveTable").prop("disabled", true).text("Saving...");
                $("#pulseLoader").fadeIn(200); // show loader overlay
            },

            success: function (response) {
                if (response.success) {
                     location.reload();
                } else {
                    toastr.error(response.message || "Something went wrong!");
                }
            },

            error: function (xhr) {
                toastr.error("Error: " + xhr.responseText);
            }
        });
    });
</script>
