@model AdminPOSViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Restaurant POS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            width: 100%;
            margin: 0;
            overflow: hidden;
            background-color: #f8f9fa;
        }

        .pos-container {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .pos-header {
            background: #343a40;
            color: white;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .pos-body {
            flex: 1;
            display: flex;
            flex-direction: row;
            overflow: hidden;
        }

        /* Left side - Categories + Products */
        .pos-left {
            flex: 2;
            display: flex;
            flex-direction: column;
            border-right: 1px solid #dee2e6;
            overflow-y: auto;
            background: #fff;
        }

        .category-list {
            display: flex;
            overflow-x: auto;
            padding: 10px;
            gap: 10px;
        }

        .category-list button {
            flex-shrink: 0;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            gap: 10px;
            padding: 10px;
            overflow-y: auto;
        }

        .product-card {
            background: #f1f1f1;
            border-radius: 10px;
            text-align: center;
            padding: 10px;
            transition: all 0.2s;
        }

        .product-card:hover {
            background: #e9ecef;
            cursor: pointer;
            transform: scale(1.03);
        }

        .product-card img {
            width: 100%;
            height: 80px;
            object-fit: cover;
            border-radius: 8px;
        }

        /* Right side - Order summary */
        .pos-right {
            flex: 1;
            background: #ffffff;
            display: flex;
            flex-direction: column;
        }

        .order-list {
            flex: 1;
            overflow-y: auto;
            padding: 10px;
        }

        .order-footer {
            border-top: 1px solid #dee2e6;
            padding: 10px;
            background: #f8f9fa;
        }

        /* Mobile layout */
        @@media (max-width: 768px) {
            .pos-body {
                flex-direction: column;
            }

            .pos-right {
                flex: none;
                height: 40%;
            }

            .pos-left {
                flex: 1;
            }
        }
    </style>
</head>
<body>
    <div class="pos-container">
        <div class="pos-header">
            <h5>Restaurant POS</h5>
            <div>
                <select class="form-select form-select-sm d-inline-block w-auto">
                    @foreach (var table in Model.Tables)
                    {
                        <option>@table?.TName</option>
                    }
                </select>
                <select class="form-select form-select-sm d-inline-block w-auto">
                    @foreach (var staff in Model.Staff)
                    {
                        <option>@staff?.StaffName</option>
                    }
                </select>
            </div>
        </div>

        <div class="pos-body">
            <div class="pos-left">
                <div class="category-list">
                    @foreach (var category in Model.Categories)
                    {
                        <button class="btn btn-outline-dark btn-sm">@category?.CategoryName</button>
                    }
                </div>

                <div class="product-grid">
                    @foreach (var product in Model.Products)
                    {
                        <div class="product-card" onclick="addToOrder('@product.ProductID', '@product.ProductName', @product.ProductPrice)">
                            <img src="@product.ImageUrl" alt="@product.ProductName" />
                            <div class="fw-bold mt-2">@product.ProductName</div>
                            <div class="text-muted">Rs. @product.ProductPrice</div>
                        </div>
                    }
                </div>
            </div>

            <div class="pos-right">
                <div class="order-list" id="orderList">
                    <p class="text-center text-muted mt-4">No items added</p>
                </div>

                <div class="order-footer text-end">
                    <h6>Total: Rs. <span id="orderTotal">0</span></h6>
                    <button class="btn btn-success w-100 mt-2">Confirm Order</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let orderItems = [];
        function addToOrder(id, name, price) {
            orderItems.push({ id, name, price });
            renderOrder();
        }

        function renderOrder() {
            const orderList = document.getElementById("orderList");
            const total = orderItems.reduce((sum, item) => sum + item.price, 0);
            document.getElementById("orderTotal").innerText = total.toFixed(2);

            orderList.innerHTML = orderItems.map(i =>
                `<div class="d-flex justify-content-between border-bottom py-1">
                    <span>${i.name}</span>
                    <span>Rs. ${i.price}</span>
                </div>`
            ).join("");
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
