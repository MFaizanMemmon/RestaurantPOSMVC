@model RestaurantManagementUI.View_Models.PorductViewModel
@{
    Layout = null; 
}

<div class="modal-body">
    <form id="productForm" asp-action="ProductCreate" asp-controller="PointOfSale" method="post" enctype="multipart/form-data">
        @if (Model != null && Model.ProductID != 0)
        {
            <input type="hidden" asp-for="ProductID" />
        }

        <input type="hidden" asp-for="ImageUrl" />

        <div class="row">
            <!-- Left Side -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label"></label>
                    <input asp-for="ProductName" class="form-control" placeholder="Enter product name" required />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryID" class="form-label"></label>
                    <select asp-for="CategoryID" asp-items="Model.Categories" class="form-select" required></select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductUrl" class="form-label">Upload Product Image</label>
                    <input asp-for="ProductUrl" class="form-control" type="file" accept="image/*" id="ImageFile" />
                    <span asp-validation-for="ProductUrl" class="text-danger"></span>
                </div>
            </div>

            <!-- Right Side: Preview -->
            <div class="col-md-6 d-flex flex-column align-items-center justify-content-center">
                <div class="border rounded p-2" style="width: 250px; height: 250px; overflow: hidden;">
                    <img id="previewImage"
                         src="@(Model?.ImageUrl ?? "/images/no-image.png")"
                         class="img-fluid rounded"
                         style="width: 100%; height: 100%; object-fit: cover;"
                         alt="Product Preview" />
                </div>
                <small class="text-muted mt-2">Preview Image</small>
            </div>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary" form="productForm">Save Product</button>
</div>

<script>
    // Live image preview
    document.getElementById('ImageFile').addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('previewImage').src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
