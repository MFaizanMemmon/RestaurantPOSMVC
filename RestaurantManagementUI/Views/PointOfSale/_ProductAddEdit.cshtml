@model RestaurantManagementUI.View_Models.PorductViewModel
@{
    Layout = null;
}

<div class="modal-body">
    <div class="row">
        <input type="hidden" id="ProductID" value="@Model?.ProductID" />
        <input type="hidden" id="ImageUrl" value="@Model?.ImageUrl" />

        <!-- Left Side -->
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Product Name</label>
                <input type="text" id="ProductName" class="form-control" value="@Model?.ProductName" placeholder="Enter product name" required />
                <span id="ProductNameError" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Product Price</label>
                <input type="number" id="ProductPrice" class="form-control" value="@Model?.ProductPrice" step="0.01" placeholder="Enter price" required />
                <span id="ProductPriceError" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Category</label>
                <div class="mb-3">
                    <label asp-for="CategoryID" class="form-label">Category</label>
                    <select asp-for="CategoryID" class="form-select" asp-items="Model.Categories" required>
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>

                <span id="CategoryError" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload Product Image</label>
                <input type="file" id="ProductUrl" class="form-control" accept="image/*" />
            </div>
        </div>

        <!-- Right Side: Preview -->
        <div class="col-md-6 d-flex flex-column align-items-center justify-content-center">
            <div class="border rounded p-2" style="width: 250px; height: 250px; overflow: hidden;">
                <img id="previewImage"
                     src="@(Model?.ImageUrl ?? "/images/no-image.png")"
                     class="img-fluid rounded"
                     style="width: 100%; height: 100%; object-fit: cover;"
                     alt="Product Preview" />
            </div>
            <small class="text-muted mt-2">Preview Image</small>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-primary" id="btnSaveProduct">Save Product</button>
</div>

<script>
    // Live image preview
    $("#ProductUrl").change(function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = e => $("#previewImage").attr("src", e.target.result);
            reader.readAsDataURL(file);
        }
    });

    $("#btnSaveProduct").click(function () {
        // Validation
        let valid = true;
        $(".text-danger").text('');

        if (!$("#ProductName").val().trim()) {
            $("#ProductNameError").text("Product name is required.");
            valid = false;
        }
        if (!$("#ProductPrice").val().trim()) {
            $("#ProductPriceError").text("Price is required.");
            valid = false;
        }
        if (!$("#CategoryID").val()) {
            $("#CategoryError").text("Category is required.");
            valid = false;
        }

        if (!valid) return;

        // Prepare form data
        const formData = new FormData();
        formData.append("ProductID", $("#ProductID").val());
        formData.append("ProductName", $("#ProductName").val());
        formData.append("ProductPrice", $("#ProductPrice").val());
        formData.append("CategoryID", $("#CategoryID").val());
        formData.append("ImageUrl", $("#ImageUrl").val());
        formData.append("ProductUrl", $("#ProductUrl")[0].files[0]);

        $.ajax({
            url: '/PointOfSale/ProductCreate',
            type: 'POST',
            data: formData,
            processData: false, // prevent jQuery from converting data
            contentType: false,
            beforeSend: function () {
                $("#btnSaveProduct").prop("disabled", true).text("Saving...");
                $("#pulseLoader").fadeIn(200);
            },
            success: function (response) {
                if (response.success) {


                   location.reload();
                } else {
                    toastr.error(response.message || "Failed to save product.");
                }
            },
            error: function (xhr) {
                toastr.error("Something went wrong while saving the product.");
            }
        });
    });
</script>
