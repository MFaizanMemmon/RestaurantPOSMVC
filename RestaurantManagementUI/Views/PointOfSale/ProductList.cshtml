@model IEnumerable<PorductViewModel>
@{
    ViewData["Title"] = "Menu";
}

<div class="mt-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="mb-0">Menu</h1>
        <button type="button" class="btn btn-primary"
                onclick="openModal('Add Menu', '/PointOfSale/ProductAddEdit','lg')">
            <i class="bi bi-plus-circle me-1"></i> Add Menu
        </button>
    </div>

    <table id="productTable" class="table table-hover mt-5 dt">
        <thead>
            <tr>
                <th>ID</th>
                <th>Menu Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Picture</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.ProductName</td>


                        <td>@item.CategoryName</td>
                        <td>@String.Format(new CultureInfo("en-PK"), "{0:C}", item.Price)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@Url.Content(item.ImageUrl)" alt="Menu Image" class="img-thumbnail" style="width:100px; height:100px; object-fit:cover;" />
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/50" alt="No Image" class="img-thumbnail" />
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-info" >Edit</button>
                            <button class="btn btn-sm btn-danger" onclick="showConfirm({
                                    title: 'Delete Menu',
                                    message: 'Are you sure you want to delete this menu?',
                                    confirmText: 'Delete',
                                    cancelText: 'Cancel',
                                    url: '/PointOfSale/DeleteProduct?id=@item.ProductID'
                                })">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No products available</td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section scripts {
    <script>


        // Edit/Delete functions
        function editRow(button) {
            const row = button.closest("tr");
            const name = row.cells[1].innerText;
            const price = row.cells[2].innerText.replace("$", "");
            const category = row.cells[3].innerText;

            document.getElementById("menuName").value = name;
            document.getElementById("menuPrice").value = price;
            document.getElementById("menuCategory").value = category;
            document.getElementById("productModalLabel").innerText = "Edit Product";

            var modal = new bootstrap.Modal(document.getElementById('productModal'));
            modal.show();
        }

        function deleteRow(button) {
            if (confirm("Are you sure you want to delete this product?")) {
                const row = button.closest("tr");
                row.remove();
            }
        }

        // Reset modal on close
        document.getElementById('productModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById("productForm").reset();
            document.getElementById("productModalLabel").innerText = "Add New Product";
        });

                // Show image preview on file select
        document.getElementById("menuPicture").addEventListener("change", function (event) {
            const file = event.target.files[0];
            const preview = document.getElementById("menuPicturePreview");

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block"; // show the image
                }
                reader.readAsDataURL(file);
            } else {
                preview.src = "#";
                preview.style.display = "none";
            }
        });

    </script>
}
